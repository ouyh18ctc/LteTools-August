@model IEnumerable<Lte.Parameters.Entities.ENodebPhoto>

<div id="image-group" class="carousel slide">
    <ol class="carousel-indicators">
        @{
            int length = Model.Count();
            for (int index =0;index<length;index++)
            {
                if (index == 0)
                {
                    <li data-target="#image-group" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#image-group" data-slide-to="@index"></li>
                }
            }
        }
    </ol>
                        
    <div class="carousel-inner">
        @{
            bool begin = true;
            foreach (Lte.Parameters.Entities.ENodebPhoto photo in Model)
            {
                if (begin)
                {
                    <div class="item active">
                        <img src="@Url.Action("GetENodebImage", new {eNodebId = photo.ENodebId})" 
                             alt="基站图片">
                    </div>
                    begin = false;
                }
                else
                {
                    <div class="item">
                        <img src="@Url.Action("GetCellImage", new{eNodebId=photo.ENodebId,sectorId=photo.SectorId})" 
                             alt="小区图片">
                    </div>
                }
            }
        }
    </div>
                        
    <a class="carousel-control left" href="#image-group" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#image-group" data-slide="next">&rsaquo;</a>
</div>