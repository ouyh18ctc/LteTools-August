@model int

<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">编辑基站信息（编号：@Model）</h4>
            </div>
            <div class="modal-body form-horizontal" data-bind="with: item">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">基站名称：</label>
                    <div class="col-sm-10">
                        <input type="text" id="name" class="form-control" data-bind="value: Name"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">地址：</label>
                    <div class="col-sm-10">
                        <input type="text" id="address" class="form-control" data-bind="value: Address"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
                <a href="#" class="btn btn-primary" data-bind="click: save">保存</a>
            </div>
        </div>
    </div>
</div>
